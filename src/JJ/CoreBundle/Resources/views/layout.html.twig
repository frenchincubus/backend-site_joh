{# JJ/COREBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}API JJ{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>API Gestion du site Johann Joosten</h1>

    </div>

    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Menu d'accueil</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('jj_core_homepage') }}">Accueil</a></li>
          <li><a href="{{ path('jj_image_addimage') }}">Ajouter une image</a></li>
          <li><a href="{{ path('jj_image_addconcert') }}">Ajouter un concert</a></li>
          <li><a href="{{ path('jj_image_adddisque') }}">Ajouter un album</a></li>
          <li><a href="{{ path('jj_image_edit') }}">editer le contenu</a></li>
        </ul>
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>
